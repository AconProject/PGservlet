<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="GameMapper">
	
	<select id="newGameListSelect" resultType="GameDTO">
		<!-- 아직 날짜가 들어가있지 않아서 불가 -->
	</select>
	
	<select id="recommendGameListSelect" resultType="GameDTO">
		SELECT *
		FROM game, rate
		WHERE game.gameNo == rate.gameNo
		ORDER BY rate.gameScore DESC
	</select>
	
	<select id="tagGameListSelect" resultType="GameDTO">
		SELECT *
		FROM game, rate
		WHERE game.gameNo == rate.gameNo
		<foreach collection="array" item="arr" open="(" close=")" separator=",">
			#{arr}
		</foreach>
		ORDER BY rate.gameScore DESC
	</select>
</mapper>