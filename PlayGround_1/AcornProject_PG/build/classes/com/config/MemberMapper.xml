<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MemberMapper">
	<!-- 최초 회원가입 -->
	<insert id="memberAdd" parameterType="MemberDTO">
		insert into member (mbrId,mbrPw,mbrName,mbrEmail,mbrGenre,mbrRegdate)
		values(#{mbrId},#{mbrPw},#{mbrName},#{mbrEmail},#{mbrGenre},SYSDATE)
	</insert>

	<!-- 최초 회원가입 시 태그 설정 -->
	<!-- 같은 화면에서 처리 시 위 insert문에 합치기 -->
	<update id="memberGenreAdd" parameterType="MemberDTO">
		update member
		set mbrGenre =
		<foreach collection="mbrGenre" item="mbrGenre" separator=",">
			#{mbrGenre}
		</foreach>
		where mbrId = #{mbrId}
	</update>

	<!-- 마이페이지 - 정보 -->
	<select id="mypage" parameterType="string" resultType="MemberDTO">
		select mbrId,mbrName,mbrEmail,mbrGenre,mbrRegdate
		from member
		where mbrId = #{mbrId}
	</select>

	<!-- 마이페이지 - 정보수정 -->
	<update id="memberUpdate" parameterType="MemberDTO">
		update member
		set
		mbrPw = #{mbrPw},
		mbrName = #{mbrName},
		mbrEmail = #{mbrEmail},
		mbrGenre = #{mbrGenre}
		where mbrId = #{mbrId}
	</update>

	<!--회원 정보 삭제 -->
	<delete id="memberDelete" parameterType="hashmap">
		DELETE
		FROM member
		WHERE mbrId = #{mbrId}
		AND mbrPw= #{mbrPw}
	</delete>

	<!-- 아이디 찾기 -->
	<select id="idSearch" resultType="string" parameterType="MemberDTO">
		select mbrId
		from member
		where mbrName=#{mbrName} and mbrEmail=#{mbrEmail}
	</select>

	<!-- 비밀번호 찾기 -->
	<select id="pwSearch" resultType="string" parameterType="MemberDTO">
		select mbrPw
		from member
		where mbrId=#{mbrId} and mbrEmail=#{mbrEmail}
	</select>

	<!-- 아이디 존재여부 확인 -->
	<select id="idCheck" parameterType="string" resultType="int">
		select count(*)
		from member
		where mbrId = #{mbrId}
	</select>

	<!-- 로그인, 데이터 가져오기 -->
	<select id="login" parameterType="hashmap" resultType="MemberDTO">
		select *
		from member
		where mbrId = #{mbrId} and mbrPw = #{mbrPw}
	</select>
	
</mapper>